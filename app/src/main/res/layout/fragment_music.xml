<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/card_view_lyric">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="lyric"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card_view_lyric"
        android:layout_marginTop="10dp"
        android:id="@+id/music_seek_bar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/music_seek_bar"
        android:layout_marginTop="10dp"
        android:id="@+id/ll_music_control_button">
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/music_pre_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_baseline_format_list_bulleted_24"
            android:id="@+id/music_list_button"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintLeft_toRightOf="@id/music_list_button"
            app:layout_constraintRight_toLeftOf="@+id/music_play_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_baseline_skip_previous_24"
            android:id="@+id/music_pre_button"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="@+id/music_pre_button"
            app:layout_constraintRight_toLeftOf="@+id/music_next_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_baseline_play_circle_filled_24"
            android:id="@+id/music_play_button"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintLeft_toRightOf="@+id/music_play_button"
            app:layout_constraintRight_toLeftOf="@+id/music_more_feature_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_baseline_skip_next_24"
            android:id="@+id/music_next_button"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toRightOf="@+id/music_next_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:id="@+id/music_more_feature_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>